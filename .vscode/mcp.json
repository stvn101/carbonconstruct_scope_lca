{
  "servers": {
    "supabase": {
      "type": "http",
      "url": "https://mcp.supabase.com/mcp",
      "query": {
        "project_ref": "jaqzoyouuzhchuyzafii",
        "features": "docs,account,database,debugging,development,functions,branching,storage"
      },
      "headers": {
        "apikey": "${input:supabase-anon-key}",
        "Authorization": "Bearer ${input:supabase-anon-key}"
      }
    },
    "stripe": {
      "type": "stdio",
      "command": "npx",
      "args": ["@stripe/mcp"],
      "env": {
        "STRIPE_SECRET_KEY": "${input:stripe-secret-key}"
      }
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github-token}"
      }
    },
    "vercel": {
      "type": "stdio",
      "command": "npx",
      "args": ["@vercel/mcp-server"],
      "env": {
        "VERCEL_TOKEN": "${input:vercel-token}"
      }
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "supabase-anon-key",
      "description": "Supabase Anonymous API Key",
      "password": true
    },
    {
      "type": "promptString",
      "id": "stripe-secret-key",
      "description": "Stripe Secret Key (for payment management)",
      "password": true
    },
    {
      "type": "promptString",
      "id": "github-token",
      "description": "GitHub Personal Access Token (for repository management)",
      "password": true
    },
    {
      "type": "promptString",
      "id": "vercel-token",
      "description": "Vercel API Token (for deployment management)",
      "password": true
    }
  ]
}
