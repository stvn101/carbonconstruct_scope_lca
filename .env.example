SUPABASE_PROJECT_ID="hkgryypdqiyigoztvran"
SUPABASE_SCHEMA="public"
SUPABASE_TABLE_UNIFIED_MATERIALS="unified_materials"

# Optional: Row Level Security policies will protect your data
